<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1426927308491-6380b6a9936f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1502&q=80');">
  <div class="banner-content">
    <h1>Borrowbox</h1>
    <p>Stop buying. Start borrowing.</p>
    <div class="searchbar">
      <%= form_tag items_path, method: :get do %>
      <%= text_field_tag :name,
      params[:name],
      class: "form-control",
      placeholder: "Find an item"
      %>
      <% end %>
      <%= link_to items_path, class: "btn btn-primary" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="index-grid">
      <div class="filter-area">
        <button type = "button" class="btn btn-secondary" id="show-map">Show Map</button>
        <div class="filter-form">
          <%= render 'items/search_form' %>
        </div>
      </div>
      <div class="cards-area">
<!-- MAP -->
        <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
<!-- CARDS -->
        <% @items.each do |item| %>
          <%= link_to item_path(item) do %>
            <div class="item-card-grid">
              <div class="item-card-image-container">
                <div class="card-avatar position-absolute z-index-ten"></div>
                <div class="item-card-image"></div>
              </div>
              <div class="item-card-lender">
                <p><%= item.user.first_name %>'s</p>
              </div>
              <div class="item-card-name">
                <h5><%= item.name %></h5>
              </div>
              <div class="item-card-description">
                <p><%= item.description %></p>
              </div>
              <div class="item-card-footer">
                <div class="card-rating-box">
                  <h6><i class="fas fa-star"></i><%= item.rating %></h6>
                </div>
                <div class="card-credits-box">
                  <h6><%= item.credits %></h6>
                </div>
              </div>
              <% link_to item_path(item) %>
            </div>
          <% end %>
        <% end %>
      </div>
        <!-- <div class="map-area"></div> -->
    </div>
  </div>
</div>


<%= link_to item_path(item) do %>

    <%= link_to item_path(item) do %>

      <div class="item-card-image-container">
        <!-- avatar -->
        <% unless item.user.photo_fake == nil %>
        <div class="card-avatar avatar-image position-absolute z-index-ten" style="background-image: url(<%= item.user.photo_fake %>)"></div>
        <% else %>
        <div class="card-avatar position-absolute z-index-ten" style="background-image: url(<%= cl_image_path item.user.photo %>)"></div>
        <% end %>
        <!-- item photo -->
        <% unless item.photo_fake == nil %>
        <div class="item-card-image" style="background-image: url(<%= item.photo_fake %>)"></div>
        <% else %>
        <div class="item-card-image" style="background-image: url(<%= cl_image_path item.photo %>)"></div>
        <% end %>
      </div>
      <div class="item-card-lender">
        <p><%= item.user.first_name %>'s</p>
      </div>
      <div class="item-card-name">
        <h5><%= item.name %></h5>
      </div>
      <div class="item-card-description">
        <p><%= item.description %></p>
      </div>
      <div class="item-card-footer">
        <div class="card-rating-box">
          <h6><i class="fas fa-star align-middle"></i><%= item.rating %></h6>
        </div>
        <div class="card-credits-box">
          <h6><i class="fab fa-cuttlefish"></i><%= item.credits %></h6>
        </div>
      </div>

    <% end %>




<div class="row">
  <%= form_tag items_path, method: :get do %>
  <div class="col-xs-12 form-group font-sm">
    <label for="item">Item</label>
    <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "What are you looking for?" %>
  </div>
  <div class="col-xs-12 form-group font-sm">
    <label for="location">Location</label>
    <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Where are you searching?" %>
  </div>
  <div class="col-xs-12 form-group font-sm">
    <label for="start-date">Start date</label>
    <%= date_field_tag :start_date, params[:start_date], class: "form-control", id: 'booking_start_date' %>
  </div>
  <div class="col-xs-12 form-group font-sm">
    <label for="end-date">End date</label>
    <%= date_field_tag :end_date, params[:end_date], class: "form-control", id: 'booking_end_date' %>
  </div>
  <div class="col-xs-12 form-group font-sm">
    <label for="max-credits">Max credits</label>
    <%= number_field_tag :max_credits, params[:max_credits], class: "form-control", placeholder: "Max Credits", autofocus: true %>
  </div>
  <div class="col-xs-12 form-group font-sm">
    <label for="max-distance">Max distance</label>
    <%= number_field_tag :max_distance, params[:max_distance], class: "form-control", placeholder: "Kilometers" %>
  </div>
  <div class="col-xs-12">
    <fieldset class="rating">
      <%= radio_button_tag :min_rating, "5" %>
      <%= label_tag 'min_rating_5', '', class: "full" %>
      <%= radio_button_tag :min_rating, "4" %>
      <%= label_tag 'min_rating_4', '', class: "full" %>
      <%= radio_button_tag :min_rating, "3" %>
      <%= label_tag 'min_rating_3', '', class: "full" %>
      <%= radio_button_tag :min_rating, "2" %>
      <%= label_tag 'min_rating_2', '', class: "full" %>
      <%= radio_button_tag :min_rating, "1" %>
      <%= label_tag 'min_rating_1', '', class: "full" %>
    </fieldset>
  </div>
  <%= hidden_field_tag :coordinates %>
  <div class="col-xs-12">
    <button type="submit" class="btn btn-filter btn-green btn-sm" style="width: 100%">Filter</button>
  </div>
  <% end %>
</div>

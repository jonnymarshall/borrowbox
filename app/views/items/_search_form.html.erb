<div class="row filter">
<%= form_tag items_path, method: :get do %>
  <div class="col-xs-12">
    <div class="form-group font-sm">
      <label for="item">Item</label>
      <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "What are you looking for?" %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group font-sm">
      <label for="location">Location</label>
      <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Where are you searching?" %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group font-sm">
      <label for="start-date">Start date</label>
      <%= date_field_tag :start_date, params[:start_date], class: "form-control" %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group font-sm">
      <label for="end-date">End date</label>
      <%= date_field_tag :end_date, params[:end_date], class: "form-control" %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group font-sm">
      <label for="max-credits">Max credits</label>
      <%= number_field_tag :max_credits, params[:max_credits], class: "form-control", placeholder: "Max Credits", autofocus: true %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group font-sm">
      <label for="max-distance">Max distance</label>
      <%= number_field_tag :max_distance, params[:max_distance], class: "form-control", placeholder: "Max Distance" %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group font-sm">
      <label for="min-rating">Min rating</label>
      <%= number_field_tag :min_rating, params[:min_rating], class: "form-control", placeholder: "Min Rating" %>
    </div>
  </div>
  <div class="col-xs-12">
    <button type="submit" class="btn btn-filter btn-green btn-sm" style="width: 100%">Filter</button>
  </div>
<% end %>
</div>

<div class="row">
<%= form_tag items_path, method: :get do %>
  <div class="col-xs-12">
    <div class="form-group">
      <label for="exampleInputName2">Item</label>
      <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "What are you looking for?" %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group">
      <label for="exampleInputName2">Location</label>
      <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Where are you searching?" %>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="form-group">
      <label for="exampleInputName2">Start date</label>
      <%= date_field_tag :start_date, params[:start_date], class: "form-control" %>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="form-group">
      <label for="exampleInputName2">End date</label>
      <%= date_field_tag :end_date,
        params[:end_date],
        class: "form-control"
      %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group">
      <label for="exampleInputName2">Max credits</label>
      <%= number_field_tag :max_credits, params[:max_credits], class: "form-control", placeholder: "Max Credits", autofocus: true %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group">
      <label for="exampleInputName2">Max distance</label>
      <%= number_field_tag :max_distance, params[:max_distance], class: "form-control", placeholder: "Max Distance" %>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="form-group">
      <label for="exampleInputName2">Min rating</label>
      <%= number_field_tag :min_rating, params[:min_rating], class: "form-control", placeholder: "Min Rating" %>
    </div>
  </div>
  <div class="col-xs-12">
    <button type="submit" class="btn btn-secondary">Filter</button>
  </div>
<% end %>
</div>


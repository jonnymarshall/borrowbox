<div class="row">
<%= form_tag items_path, method: :get do %>
  <div class="col-xs-12 form-group font-sm">
      <label for="item">Item</label>
      <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "What are you looking for?" %>
  </div>
  <div class="col-xs-12 form-group font-sm">
      <label for="location">Location</label>
      <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Where are you searching?" %>
  </div>
  <div class="col-xs-12 form-group font-sm">
      <label for="start-date">Start date</label>
      <%= date_field_tag :start_date, params[:start_date], class: "form-control", id: 'booking_start_date' %>
  </div>
  <div class="col-xs-12 form-group font-sm">
      <label for="end-date">End date</label>
      <%= date_field_tag :end_date, params[:end_date], class: "form-control", id: 'booking_end_date' %>
  </div>
  <div class="col-xs-12 form-group font-sm">
      <label for="max-credits">Max credits</label>
      <%= number_field_tag :max_credits, params[:max_credits], class: "form-control", placeholder: "Max Credits", autofocus: true %>
  </div>
  <div class="col-xs-12 form-group font-sm">
      <label for="max-distance">Max distance</label>
      <%= number_field_tag :max_distance, params[:max_distance], class: "form-control", placeholder: "Kilometers" %>
  </div>
  <div class="col-xs-12">
    <fieldset class="rating">
        <input type="radio" id="star5" name="min_rating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars"></label>
        <input type="radio" id="star4half" name="min_rating" value="4.5" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
        <input type="radio" id="star4" name="min_rating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars"></label>
        <input type="radio" id="star3half" name="min_rating" value="3.5" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
        <input type="radio" id="star3" name="min_rating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars"></label>
        <input type="radio" id="star2half" name="min_rating" value="2.5" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
        <input type="radio" id="star2" name="min_rating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
        <input type="radio" id="star1half" name="min_rating" value="1.5" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
        <input type="radio" id="star1" name="min_rating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star"></label>
        <input type="radio" id="starhalf" name="min_rating" value="0.5" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
    </fieldset>
  </div>
  <%= hidden_field_tag :coordinates %>
  <div class="col-xs-12">
    <button type="submit" class="btn btn-filter btn-green btn-sm" style="width: 100%">Filter</button>
  </div>
<% end %>
</div>

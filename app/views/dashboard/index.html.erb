                <% else %>
                  <div class="card-avatar position-absolute z-index-ten" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path booking.item.user.photo %>)"></div>
                <% end %>
                  <!-- item photo -->

  <% end %>
  <%= link_to "Item returned", booking_path(booking, status: 'borrowed'), {class: 'btn btn-success', method: :patch} %>
  <%= link_to "MESSAGE READ", booking_path(booking, response_message_read: true), {class: 'btn btn-primary', method: :patch} %>
<% end %>


              <% end %>
            </div>
            <div class="booking-card-footer">
              <div class="card-rating-box">
                <h6><i class="fas fa-star"></i><%= booking.item.rating %></h6>
              </div>
              <div class="card-credits-box">
                <h6><%= booking.item.credits %></h6>
              </div>
            </div>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>

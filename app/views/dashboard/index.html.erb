                  <div class="booking-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= booking.item.photo_fake %>)"></div>
                <% else %>
                  <div class="booking-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path booking.item.photo %>)"></div>
                <% end %>
              </div>
              <div class="booking-card-footer">
                <div class="card-rating-box">
                  <h6><i class="fas fa-star"></i><%= booking.item.rating %></h6>
                </div>
                <div class="card-credits-box">
                  <h6><%= booking.item.credits %></h6>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <h2>Borrowed</h2>
        <% current_user.bookings.where(status: :borrowed).each do |booking| %>

<%#= link_to item_path(booking.item) do %>
  <div class="booking-card-request-info-section">
    <% if !booking.response_message_read %>
      <i type="button" id="response-message-notification" class="fas fa-comment notification response-notification hidden" data-toggle="modal" data-target="<%="#rm_modal_#{booking.id}" %>"></i>
      <strong type="button" id="response-message-notification-number" class="response-notification black-text hidden" data-toggle="modal" data-target="<%="#rm_modal_#{booking.id}" %>">1</strong>
    <% end %>

    <h4><%= "#{booking.item.user.first_name}'s #{booking.item.name}" %></h4>
    <h6><strong><%= "#{booking.start_date} - #{booking.end_date}" %></strong></h6>
  </div>
<%# end %>

<%#= link_to item_path(booking.item) do %>
  <div class="booking-card-request-message-section">
    <div class="request-message inline">
      <strong>Your message:&nbsp;&nbsp;&nbsp;</strong>
      <p><%= booking.request_message %></p>
    </div>
    <div class="request-message inline">
      <% if booking.response_message_read %>
        <!-- <div class="green-bar"></div>  -->
          <strong><%= booking.item.user.first_name %>'s response:&nbsp;&nbsp;&nbsp;</strong>
        <p><%= booking.request_message %></p>
      <% end %>
    </div>
  </div>
<%# end %>
